<form method="post">
  <form method="post">
    <div class="form-group has-success">
      {{#if this.article.visible}}
      <div class="mb-3">
        <input type="radio" name="visible" value="true" checked="true">
        <label class="visHid text-success">Visible</label>
        <input type="radio" name="visible" value="false">
        <label class="visHid text-success">Hidden</label>
      </div>
      {{else}}
      <div class="mb-3">
        <input type="radio" name="visible" value="true">
        <label class="visHid text-success">Visible</label>
        <input type="radio" name="visible" value="false" checked="true">
        <label class="visHid text-success">Hidden</label>
      </div>
      {{/if}}
    </div>

    <div class="form-group row has-success">
      <label for="example-text-input text-success " class="col-12 col-form-label">Aticle Title:</label>
      <div class="col-lg-6 col-md-8 col-sm-9 col-xs-9 ">
        <input class="form-control" type="text" name="title" value={{this.article.title}} id="example-text-input">
      </div>

      <label for="example-text-input text-success " class="col-12 col-form-label">Order:</label>
        <div class="col-lg-6 col-md-8 col-sm-9 col-xs-9 ">
            <input class="form-control" type="number" name="order" value={{this.article.order}} id="example-text-input">
        </div>


    </div>
    
    <div class="form-group has-success">
      <label class="text-success mt-2"> Categories:</label>
      <select name="category" class="form-control mb-4">
        <option value={{this.article.category}} selected>{{this.CategorySelected}}</option>
        {{#each categories}}
        <option value={{this._id}}>{{ this.title }}</option>
        {{/each}}
      </select>
    </div>
    
    <div class="form-group has-success">
  <label class="mr-sm-2 text-success" for="inlineFormCustomSelect">Language</label>
  <select name="language"  class="custom-select mb-2 mr-sm-2 mb-sm-0" id="inlineFormCustomSelect">
    <option value={{this.article.language}}  selected>{{this.article.language}}</option>
    <option value="En">English</option>
    <option value="Ar">Arabic</option>
    <option value="Am">Amharic</option>
  </select>
   </div>

    <div class="form-group has-success">
      <label class="text-success">Aticle Discreption:</label>
      <textarea class="form-control form-control-success mb-3" name="fullContent">{{this.article.fullContent}} 
    </textarea>
      <button class="btn bg-success">Update Aticle</button>
    </div>
  </form>