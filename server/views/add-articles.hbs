<form method="post">
    <h4>Title</h4>
    <input type="title" name="title" />
    <br/>
    <h4> Categories:</h4>
    <select name="category">
        <option value="null" selected>Choose a Category</option>
        {{#each categories}}
            <option value={{this._id}}>{{ this.title }}</option>
        {{/each}}
    </select>
    <h4> Full Content</h4>
    <br/>
    <textarea name="fullContent" id="" cols="30" rows="10">
    </textarea>
    <br/>
    <button class="btn bg-danger"type="submit">New Article</button>
</form>

<hr>

 