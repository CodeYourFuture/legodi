
{{#if weegieData}}
<h3 class="text-success">Add a New Weegie Question</h3>
<form method="post">

 <div class="form-group has-success">
    <label class="text-success">
      <h3 class="text-primary">
        <h3 class="text-primary">Question:</h3>
    </label>
    <textarea rows="3" class="form-control form-control-success mb-4" id="inputSuccess1" name="title">{{this.weegieData.title}}</textarea>
  </div>

